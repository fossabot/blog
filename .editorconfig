# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[{*.json, *.svg}]
indent_style = space
indent_size = 4

# Matches the exact package.json, or *rc
[{package.json,*.yml,*rc}]
indent_style = space
indent_size = 2

[*.md]
max_line_length = 0
trim_trailing_whitespace = false
